   # make url friendly
    Options All -Indexes
    RewriteEngine On
    RewriteRule ^([-a-zA-Z0-9]+)/([-a-zA-Z0-9]+)$ index.php?controller=$1&action=$2 [QSA,L]
    RewriteRule ^([-a-zA-Z0-9]+)/([-a-zA-Z0-9]+)/([-a-zA-Z0-9]+)$ index.php?controller=$1&action=$2&_param=$3 [QSA,L]
    
   # supress php errors
    php_flag display_startup_errors off
    php_flag display_errors off
    php_value docref_root 0
    php_value docref_ext 0


    # enable PHP error logging
    php_flag  log_errors on
    php_value error_log  error.log


    # general directive for setting php error level
    php_value error_reporting -1